<UserControl x:Class="Calculator.Controls.MemoryBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="MC"/>
        <Button Grid.Column="1" Content="MR"/>
        <Button Grid.Column="2" Content="M+"/>
        <Button Grid.Column="3" Content="M-"/>
        <Button Grid.Column="4" Content="MS"/>
        <Button Grid.Column="5" Content="M&#x2335;"/>
    </Grid>
</UserControl>
